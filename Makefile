######################################################################################
#                                       Variables                                    #
######################################################################################
NAME = so_long 
LIBFT = libft/libft.a
MLX = -lX11 -lXext -lXrender -lm

SRCS = 
OBJS = $(SRCS:.c=.o)

CC = cc
CFLAGS = -Wall -Werror -Wextra


######################################################################################
#                                       Rules                                        #
######################################################################################
$(NAME): $(OBJS) $(LIBFT)
    $(CC) $(CFLAGS) -o $(NAME) $(OBJS) $(LIBFT) $(MLX)

$(LIBFT):
    make -C libft

%.o: %.c
    $(CC) $(CFLAGS)  -c $< -o $@

clean:
    rm -rf $(OBJS)
    make clean -C libft

fclean: clean
    rm -rf $(NAME)
    make fcleam -C libft

re: fclean $(NAME)


######################################################################################
#                                       Phony                                        #
######################################################################################
.PHONY: clean fclean re
